@model IEnumerable<PUPBookingSystem.Models.Room>

@{
    ViewData["Title"] = "Manage Rooms";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Rooms - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        body {
            background-color: #0B0F19;
            color: #E2E8F0;
            font-family: sans-serif;
        }
    </style>
</head>
<body class="bg-[#0B0F19] min-h-screen">

    <nav class="sticky top-0 z-50 border-b border-slate-800 bg-[#131722]/80 backdrop-blur-md px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-8">
            <div class="flex items-center gap-3">
                
                <span class="font-bold text-white text-lg tracking-tight">Admin Dashboard</span>
            </div>

            <div class="flex items-center gap-1 bg-[#0B0F19] p-1 rounded-lg border border-slate-800">
                <a href="/Admin" class="px-4 py-2 rounded-md text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 transition-all flex items-center gap-2">
                    <i data-lucide="list" class="w-4 h-4"></i> List
                </a>
                <a href="/Admin/Calendar" class="px-4 py-2 rounded-md text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 transition-all flex items-center gap-2">
                    <i data-lucide="calendar" class="w-4 h-4"></i> Calendar
                </a>
                <a href="/Admin/Rooms" class="px-4 py-2 rounded-md text-sm font-bold bg-slate-800 text-white shadow-md transition-all flex items-center gap-2">
                    <i data-lucide="settings" class="w-4 h-4 text-yellow-500"></i> Rooms
                </a>
            </div>
        </div>

        <div class="flex items-center gap-6">
            <a href="/" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors text-sm font-medium">
                <i data-lucide="home" class="w-4 h-4"></i> Home
            </a>
            <div class="h-4 w-px bg-slate-800"></div>
            <a href="/Account/Logout" class="flex items-center gap-2 text-red-400 hover:text-red-300 transition-colors text-sm font-medium">
                <i data-lucide="log-out" class="w-4 h-4"></i> Logout
            </a>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-6 py-10">
        <div class="mb-10">
            <h1 class="text-3xl font-bold text-white mb-2">Manage Lab Rooms</h1>
            <p class="text-slate-400">Update capacity, availability, and operating hours.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var room in Model)
            {
                <div class="bg-[#131722] border border-slate-800 rounded-xl p-6 shadow-xl relative group hover:border-slate-600 transition-all">

                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-2xl font-bold text-white">@room.Code</h3>
                            <p class="text-xs text-slate-500 uppercase font-bold tracking-wider mt-1">@room.Notes</p>
                        </div>
                        <span class="px-3 py-1 rounded-full text-xs font-bold
                                @(room.Status == "Available" ? "bg-green-500/10 text-green-400 border border-green-500/20" : "bg-red-500/10 text-red-400 border border-red-500/20")">
                            @room.Status
                        </span>
                    </div>

                    <div class="space-y-3 mb-6">
                        <div class="flex items-center gap-3 text-slate-400 text-sm">
                            <i data-lucide="users" class="w-4 h-4 text-yellow-500"></i>
                            <span>Capacity: <b class="text-white">@room.Capacity</b></span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-400 text-sm">
                            <i data-lucide="clock" class="w-4 h-4 text-yellow-500"></i>
                            <span>@room.Hours</span>
                        </div>
                    </div>

                    <button onclick="openEditModal('@room.Id', '@room.Code', '@room.Capacity', '@room.Status', '@room.Hours', '@room.Notes')"
                            class="w-full py-2.5 rounded-lg bg-slate-800 hover:bg-slate-700 text-white font-bold text-sm transition-all border border-slate-700 flex items-center justify-center gap-2">
                        <i data-lucide="edit-2" class="w-4 h-4"></i> Edit Details
                    </button>
                </div>
            }
        </div>
    </div>

    <div id="editModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4">
        <div class="bg-[#131722] border border-slate-800 rounded-2xl w-full max-w-md p-6 shadow-2xl transform transition-all scale-100">
            <h3 class="text-xl font-bold text-white mb-6">Edit Room <span id="modalRoomCode" class="text-yellow-500"></span></h3>

            <form action="/Admin/UpdateRoom" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="modalRoomId" />

                <div>
                    <label class="block text-xs font-bold text-slate-400 mb-1 uppercase">Status</label>
                    <select name="status" id="modalStatus" class="w-full bg-[#1E2330] border border-slate-700 text-white rounded-lg p-3 outline-none focus:border-yellow-500 transition-colors">
                        <option value="Available">Available</option>
                        <option value="Maintenance">Maintenance</option>
                        <option value="Closed">Closed</option>
                    </select>
                </div>

                <div>
                    <label class="block text-xs font-bold text-slate-400 mb-1 uppercase">Capacity</label>
                    <input type="number" name="capacity" id="modalCapacity" class="w-full bg-[#1E2330] border border-slate-700 text-white rounded-lg p-3 outline-none focus:border-yellow-500 transition-colors" />
                </div>

                <div>
                    <label class="block text-xs font-bold text-slate-400 mb-1 uppercase">Operating Hours</label>
                    <input type="text" name="hours" id="modalHours" placeholder="e.g. 7:00 AM - 9:00 PM" class="w-full bg-[#1E2330] border border-slate-700 text-white rounded-lg p-3 outline-none focus:border-yellow-500 transition-colors" />
                </div>

                <div>
                    <label class="block text-xs font-bold text-slate-400 mb-1 uppercase">Notes / Label</label>
                    <input type="text" name="notes" id="modalNotes" class="w-full bg-[#1E2330] border border-slate-700 text-white rounded-lg p-3 outline-none focus:border-yellow-500 transition-colors" />
                </div>

                <div class="flex gap-3 pt-4">
                    <button type="button" onclick="closeModal()" class="flex-1 py-3 rounded-lg bg-slate-800 text-slate-400 font-bold hover:bg-slate-700 transition-colors">Cancel</button>
                    <button type="submit" class="flex-1 py-3 rounded-lg bg-yellow-500 text-black font-bold hover:bg-yellow-400 transition-colors shadow-lg shadow-yellow-500/20">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        lucide.createIcons();

        function openEditModal(id, code, capacity, status, hours, notes) {
            document.getElementById('modalRoomId').value = id;
            document.getElementById('modalRoomCode').innerText = code;
            document.getElementById('modalCapacity').value = capacity;
            document.getElementById('modalStatus').value = status;
            document.getElementById('modalHours').value = hours;
            document.getElementById('modalNotes').value = notes;

            document.getElementById('editModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('editModal').classList.add('hidden');
        }
    </script>
</body>
</html>