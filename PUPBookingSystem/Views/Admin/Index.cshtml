@model IEnumerable<PUPBookingSystem.Models.BookingRequest>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null; // Standalone layout
}

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - PUP L.A.B.S.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        body {
            background-color: #0B0F19;
            color: #E2E8F0;
            font-family: sans-serif;
        }
    </style>
</head>
<body class="bg-[#0B0F19] min-h-screen pb-12">

    <nav class="sticky top-0 z-40 border-b border-slate-800 bg-[#131722]/80 backdrop-blur-md px-6 py-4 flex items-center justify-between">

        <div class="flex items-center gap-8">
            <div class="flex items-center gap-3">
                
                <span class="font-bold text-white text-lg tracking-tight">Admin Dashboard</span>
            </div>

            <div class="flex items-center gap-1 bg-[#0B0F19] p-1 rounded-lg border border-slate-800">
                <a href="/Admin" class="px-4 py-2 rounded-md text-sm font-bold bg-slate-800 text-white shadow-md transition-all flex items-center gap-2">
                    <i data-lucide="list" class="w-4 h-4 text-yellow-500"></i> List
                </a>
                <a href="/Admin/Calendar" class="px-4 py-2 rounded-md text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 transition-all flex items-center gap-2">
                    <i data-lucide="calendar" class="w-4 h-4"></i> Calendar
                </a>
                <a href="/Admin/Rooms" class="px-4 py-2 rounded-md text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 transition-all flex items-center gap-2">
                    <i data-lucide="settings" class="w-4 h-4"></i> Rooms
                </a>
            </div>
        </div>

        <div class="flex items-center gap-6">
            <a href="/" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors text-sm font-medium">
                <i data-lucide="home" class="w-4 h-4"></i> Home
            </a>
            <div class="h-4 w-px bg-slate-800"></div>
            <a href="/Account/Logout" class="flex items-center gap-2 text-red-400 hover:text-red-300 transition-colors text-sm font-medium">
                <i data-lucide="log-out" class="w-4 h-4"></i> Logout
            </a>
        </div>
    </nav>

    <div class="max-w-5xl mx-auto px-6 py-10">

        <div class="mb-10">
            <h1 class="text-3xl font-bold text-white mb-2">Room Booking Requests</h1>
            <p class="text-slate-400">Review and manage incoming room reservations.</p>
        </div>

        <div class="flex flex-wrap gap-2 mb-8">
            <a href="/Admin?filter=all"
               class="px-4 py-2 rounded-lg font-medium text-sm flex items-center gap-2 transition-all @(string.IsNullOrEmpty(ViewBag.CurrentFilter) || ViewBag.CurrentFilter == "all" ? "bg-slate-700 text-white" : "bg-[#131722] border border-slate-800 text-slate-400 hover:border-slate-600")">
                <i data-lucide="list" class="w-4 h-4"></i> All
            </a>

            <a href="/Admin?filter=pending"
               class="px-4 py-2 rounded-lg font-medium text-sm flex items-center gap-2 transition-all @(ViewBag.CurrentFilter == "pending" ? "bg-yellow-500 text-black shadow-lg shadow-yellow-500/20" : "bg-[#131722] border border-slate-800 text-slate-400 hover:border-yellow-500/50 hover:text-yellow-500")">
                <i data-lucide="clock" class="w-4 h-4"></i> Pending
            </a>

            <a href="/Admin?filter=approved"
               class="px-4 py-2 rounded-lg font-medium text-sm flex items-center gap-2 transition-all @(ViewBag.CurrentFilter == "approved" ? "bg-green-600 text-white shadow-lg shadow-green-500/20" : "bg-[#131722] border border-slate-800 text-slate-400 hover:border-green-500/50 hover:text-green-500")">
                <i data-lucide="check-circle" class="w-4 h-4"></i> Approved
            </a>

            <a href="/Admin?filter=rejected"
               class="px-4 py-2 rounded-lg font-medium text-sm flex items-center gap-2 transition-all @(ViewBag.CurrentFilter == "rejected" ? "bg-red-600 text-white shadow-lg shadow-red-500/20" : "bg-[#131722] border border-slate-800 text-slate-400 hover:border-red-500/50 hover:text-red-500")">
                <i data-lucide="x-circle" class="w-4 h-4"></i> Rejected
            </a>
        </div>

        <div class="space-y-6">
            @foreach (var item in Model)
            {
                <div class="bg-[#131722] border border-slate-800 rounded-xl p-6 shadow-xl hover:border-slate-700 transition-colors relative overflow-hidden group">

                    <div class="absolute top-0 left-0 w-full h-1 @(item.Status == "Approved" ? "bg-green-500" : item.Status == "Rejected" ? "bg-red-500" : "bg-yellow-500")"></div>

                    <div class="grid md:grid-cols-2 gap-8 mb-6">
                        <div>
                            <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Requester</p>
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-slate-400">
                                    <i data-lucide="user" class="w-5 h-5"></i>
                                </div>
                                <div>
                                    <p class="font-bold text-white text-lg leading-tight">@item.User?.Name</p>
                                    <p class="text-sm text-slate-500">@item.User?.Email</p>
                                </div>
                            </div>
                        </div>

                        <div>
                            <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Event / Purpose</p>
                            <p class="font-bold text-white text-lg leading-tight">@item.Purpose</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6 p-4 bg-slate-800/30 rounded-lg border border-slate-800/50">
                        <div>
                            <p class="text-xs text-slate-500 mb-1">Room</p>
                            <p class="font-bold text-yellow-500">@item.Room?.Code</p>
                        </div>
                        <div>
                            <p class="text-xs text-slate-500 mb-1">Date</p>
                            <p class="font-semibold text-slate-200">@item.Date.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div>
                            <p class="text-xs text-slate-500 mb-1">Time</p>
                            <p class="font-semibold text-slate-200">
                                @DateTime.Today.Add(item.StartTime).ToString("hh:mm tt") -
                                @DateTime.Today.Add(item.EndTime).ToString("hh:mm tt")
                            </p>
                        </div>
                        <div>
                            <p class="text-xs text-slate-500 mb-1">Status</p>
                            <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded text-xs font-bold
                                    @(item.Status == "Pending" ? "text-yellow-400 bg-yellow-400/10" :
                                                                    item.Status == "Approved" ? "text-green-400 bg-green-400/10" :
                                                                    "text-red-400 bg-red-400/10")">
                                @if (item.Status == "Pending")
                                {
                                    <i data-lucide="clock" class="w-3 h-3"></i>
                                }
                                else if (item.Status == "Approved")
                                {

                                    <i data-lucide="check" class="w-3 h-3"></i>
                                }
                                else
                                {

                                    <i data-lucide="x" class="w-3 h-3"></i>
                                }
                                @item.Status
                            </span>
                        </div>
                    </div>

                    <div class="mb-6">
                        <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-2 flex items-center gap-2">
                            <i data-lucide="message-square" class="w-3 h-3"></i> Admin Comment
                        </p>
                        @if (!string.IsNullOrEmpty(item.AdminNote))
                        {
                            <div class="mb-3 p-3 bg-slate-800/50 rounded-lg border border-slate-700">
                                <p class="text-sm text-slate-300">@item.AdminNote</p>
                            </div>
                        }
                        <div class="flex gap-2">
                            <input type="text" id="comment-@item.Id" placeholder="Add a comment for the student..." 
                                   value="@item.AdminNote"
                                   class="w-full bg-[#0B0F19] border border-slate-800 rounded-lg px-4 py-2 text-sm text-white placeholder:text-slate-500 focus:outline-none focus:border-yellow-500/50 transition-all" />
                        </div>
                    </div>

                    @if (item.Status == "Pending")
                    {
                        <div class="flex items-center gap-3 pt-4 border-t border-slate-800">
                            <form action="/Admin/Approve" method="post" class="flex-1" onsubmit="syncComment(this, @item.Id)">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="comment" id="approve-comment-@item.Id" value="@item.AdminNote" />
                                <button type="submit" class="w-full py-3 rounded-lg bg-yellow-500 hover:bg-yellow-400 text-black font-bold text-sm transition-all shadow-lg shadow-yellow-500/20 flex items-center justify-center gap-2">
                                    <i data-lucide="check" class="w-4 h-4"></i> Approve Request
                                </button>
                            </form>

                            <form action="/Admin/Reject" method="post" class="flex-1" onsubmit="syncComment(this, @item.Id)">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="comment" id="reject-comment-@item.Id" value="@item.AdminNote" />
                                <button type="submit" class="w-full py-3 rounded-lg bg-slate-800 hover:bg-red-500/10 hover:text-red-500 hover:border-red-500/50 border border-slate-700 text-slate-300 font-bold text-sm transition-all flex items-center justify-center gap-2">
                                    <i data-lucide="x" class="w-4 h-4"></i> Reject
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="pt-4 border-t border-slate-800 text-center">
                            <p class="text-sm text-slate-500 italic">This request has been processed.</p>
                        </div>
                    }


                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-20 bg-[#131722] rounded-xl border border-slate-800 border-dashed">
                    <div class="w-16 h-16 bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-500">
                        <i data-lucide="inbox" class="w-8 h-8"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">No Requests Found</h3>
                    <p class="text-slate-400">There are no @ViewBag.CurrentFilter requests at the moment.</p>
                </div>
            }
        </div>
    </div>

    <script>
        lucide.createIcons();

        // Sync the comment input with the hidden fields in Approve/Reject forms
        function syncComment(form, bookingId) {
            const commentInput = document.getElementById('comment-' + bookingId);
            const commentValue = commentInput ? commentInput.value : '';
            
            // Update the hidden comment field in the submitted form
            const hiddenComment = form.querySelector('input[name="comment"]');
            if (hiddenComment) {
                hiddenComment.value = commentValue;
            }
            return true;
        }
    </script>
</body>
</html>