@{
    ViewData["Title"] = "Calendar Schedule";
    Layout = null;
    var bookingsJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.Bookings);
}

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Calendar - PUP Labs</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        body {
            background-color: #0B0F19;
            color: #E2E8F0;
            font-family: sans-serif;
        }

        /* Calendar Grid Styles */
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background-color: #1e293b;
            border: 1px solid #1e293b;
        }

        .calendar-day {
            background-color: #131722;
            min-height: 120px;
            padding: 8px;
            transition: background-color 0.2s;
        }

            .calendar-day:hover {
                background-color: #1a202e;
            }

        .calendar-header {
            background-color: #0B0F19;
            padding: 12px;
            text-align: center;
            font-weight: bold;
            color: #94a3b8;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
        }

        .other-month {
            opacity: 0.3;
            background-color: #0f121a;
        }

        /* Event Pill */
        .event-pill {
            font-size: 0.7rem;
            padding: 4px 6px;
            margin-bottom: 4px;
            border-radius: 4px;
            background-color: rgba(234, 179, 8, 0.1);
            border-left: 2px solid #eab308;
            color: #cbd5e1;
            cursor: pointer;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: all 0.2s;
        }

            .event-pill:hover {
                background-color: rgba(234, 179, 8, 0.2);
                transform: translateX(2px);
            }
    </style>
</head>
<body class="min-h-screen bg-[#0B0F19]">

    <nav class="sticky top-0 z-50 border-b border-slate-800 bg-[#131722]/80 backdrop-blur-md px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-8">
            <div class="flex items-center gap-3">
                
                <span class="font-bold text-white text-lg tracking-tight">Admin Dashboard</span>
            </div>

            <div class="flex items-center gap-1 bg-[#0B0F19] p-1 rounded-lg border border-slate-800">
                <a href="/Admin" class="px-4 py-2 rounded-md text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 transition-all flex items-center gap-2">
                    <i data-lucide="list" class="w-4 h-4"></i> List
                </a>
                <a href="/Admin/Calendar" class="px-4 py-2 rounded-md text-sm font-bold bg-slate-800 text-white shadow-md transition-all flex items-center gap-2">
                    <i data-lucide="calendar" class="w-4 h-4 text-yellow-500"></i> Calendar
                </a>
                <a href="/Admin/Rooms" class="px-4 py-2 rounded-md text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 transition-all flex items-center gap-2">
                    <i data-lucide="settings" class="w-4 h-4"></i> Rooms
                </a>
            </div>
        </div>

        <div class="flex items-center gap-6">
            <a href="/" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors text-sm font-medium">
                <i data-lucide="home" class="w-4 h-4"></i> Home
            </a>
            <div class="h-4 w-px bg-slate-800"></div>
            <a href="/Account/Logout" class="flex items-center gap-2 text-red-400 hover:text-red-300 transition-colors text-sm font-medium">
                <i data-lucide="log-out" class="w-4 h-4"></i> Logout
            </a>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-6 py-8">

        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-3xl font-bold text-white mb-1">Schedule Overview</h1>
                <p class="text-slate-400 text-sm">View approved bookings by month.</p>
            </div>

            <div class="flex items-center gap-4 bg-[#131722] p-2 rounded-xl border border-slate-800">
                <button onclick="changeMonth(-1)" class="p-2 hover:bg-slate-800 rounded-lg text-slate-400 hover:text-white transition-colors">
                    <i data-lucide="chevron-left" class="w-5 h-5"></i>
                </button>
                <span id="currentMonthYear" class="text-lg font-bold text-white min-w-[140px] text-center select-none">
                </span>
                <button onclick="changeMonth(1)" class="p-2 hover:bg-slate-800 rounded-lg text-slate-400 hover:text-white transition-colors">
                    <i data-lucide="chevron-right" class="w-5 h-5"></i>
                </button>
            </div>
        </div>

        <div class="rounded-xl overflow-hidden border border-slate-800 shadow-2xl">
            <div class="grid grid-cols-7 bg-[#0B0F19] border-b border-slate-800">
                <div class="calendar-header">Sun</div>
                <div class="calendar-header">Mon</div>
                <div class="calendar-header">Tue</div>
                <div class="calendar-header">Wed</div>
                <div class="calendar-header">Thu</div>
                <div class="calendar-header">Fri</div>
                <div class="calendar-header">Sat</div>
            </div>

            <div id="calendarGrid" class="calendar-grid">
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();

        const bookings = @Html.Raw(bookingsJson);
        let currentDate = new Date();

        function renderCalendar() {
            const grid = document.getElementById('calendarGrid');
            const monthLabel = document.getElementById('currentMonthYear');
            grid.innerHTML = '';

            const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            monthLabel.innerText = `${monthNames[currentDate.getMonth()]} ${currentDate.getFullYear()}`;

            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();

            const firstDayOfMonth = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const daysInPrevMonth = new Date(year, month, 0).getDate();

            // Prev Month Padding
            for (let i = 0; i < firstDayOfMonth; i++) {
                const dayNum = daysInPrevMonth - firstDayOfMonth + i + 1;
                grid.appendChild(createDayCell(dayNum, true));
            }

            // Current Month
            for (let day = 1; day <= daysInMonth; day++) {
                const cell = createDayCell(day, false);

                const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                const dayBookings = bookings.filter(b => b.date === dateStr);

                dayBookings.forEach(booking => {
                    const pill = document.createElement('div');
                    pill.className = 'event-pill group relative';
                    pill.innerHTML = `<span class="font-bold text-yellow-500">${booking.room}</span> <span class="opacity-75 text-[10px]">${booking.start}</span>`;
                    pill.title = `${booking.room} | ${booking.start} - ${booking.end}\nUser: ${booking.userName}\nEvent: ${booking.title}`;
                    cell.appendChild(pill);
                });

                grid.appendChild(cell);
            }

            // Next Month Padding
            const totalCells = firstDayOfMonth + daysInMonth;
            const remaining = 7 - (totalCells % 7);
            if (remaining < 7) {
                for (let i = 1; i <= remaining; i++) {
                    grid.appendChild(createDayCell(i, true));
                }
            }
        }

        function createDayCell(number, isOtherMonth) {
            const div = document.createElement('div');
            div.className = `calendar-day ${isOtherMonth ? 'other-month' : ''}`;

            const numSpan = document.createElement('div');
            numSpan.className = `text-right text-sm font-bold mb-1 ${isOtherMonth ? 'text-slate-600' : 'text-slate-400'}`;
            numSpan.innerText = number;

            const today = new Date();
            if (!isOtherMonth && number === today.getDate() && currentDate.getMonth() === today.getMonth() && currentDate.getFullYear() === today.getFullYear()) {
                numSpan.className = "text-right text-sm font-bold mb-1 text-yellow-500";
                numSpan.innerText = number + " Today";
            }

            div.appendChild(numSpan);
            return div;
        }

        function changeMonth(delta) {
            currentDate.setMonth(currentDate.getMonth() + delta);
            renderCalendar();
        }

        renderCalendar();
    </script>
</body>
</html>